{
  "private": true,
  "sideEffects": false,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:css": "pnpm generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "pnpm generate:css",
    "dev:remix": "remix dev",
    "format": "prettier --write --ignore-path .gitignore \"**/*.{js,ts,tsx,md}\"",
    "lint": "eslint --cache --cache-location ./.cache/eslint .",
    "typecheck": "tsc -b",
    "validate": "run-p lint typecheck",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "start": "remix-serve build",
    "setup": "prisma migrate dev"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@remix-run/node": "^1.13.0",
    "@remix-run/react": "^1.13.0",
    "@remix-run/vercel": "^1.13.0",
    "@vercel/node": "^2.9.8",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.4.0",
    "clsx": "^1.2.1",
    "highlight.js": "^11.7.0",
    "marked": "^4.2.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "remove-markdown": "^0.5.0",
    "spin-delay": "^1.2.0",
    "tailwind-merge": "^1.10.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.13.0",
    "@remix-run/eslint-config": "^1.13.0",
    "@remix-run/serve": "^1.13.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/remove-markdown": "^0.3.1",
    "auto-prefixer": "^0.4.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "prisma": "^4.10.1",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
