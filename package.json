{
  "name": "remix-blog",
  "private": true,
  "description": "Remix blog website",
  "sideEffects": false,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "scripts": {
    "dev": "remix dev",
    "build": "remix build",
    "start": "remix-serve build",
    "validate": "run-p lint typecheck",
    "lint": "eslint --cache --cache-location ./.cache/eslint .",
    "typecheck": "tsc -b",
    "format": "prettier --write --ignore-path .gitignore \"**/*.{js,ts,tsx,md}\"",
    "setup": "prisma migrate dev"
  },
  "eslintIgnore": [
    "/node_modules",
    "/api",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@remix-run/node": "^1.13.0",
    "@remix-run/react": "^1.13.0",
    "@remix-run/vercel": "^1.13.0",
    "@vercel/node": "^2.9.8",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "highlight.js": "^11.7.0",
    "marked": "^4.2.12",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "spin-delay": "^1.2.0",
    "tailwind-merge": "^1.10.0",
    "tailwind-variants": "^0.0.31",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.13.0",
    "@remix-run/eslint-config": "^1.13.0",
    "@remix-run/serve": "^1.13.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "auto-prefixer": "^0.4.2",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "prisma": "^4.11.0",
    "tailwindcss": "^3.2.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
